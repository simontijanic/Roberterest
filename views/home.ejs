<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/fonts.css">

    <script defer src="/javascript/client.js"></script>

    <title>Robertness - Norge</title>
</head>
<body class="ubuntu-regular">

    <%- include('components/sidebar') %>

    <div class="main-content">
        <%- include('components/searchbar') %>

        <div class="grid">
            <% posts.forEach(post => { %>
                <div class="grid-item">
                    <a class="buttonProfilePost" href="/post/<%= post._id %>">
                        <img class="gridPostImage" src="/images/uploads/<%= post.image %>" alt="Post Image" />
                    </a>        
                    <div class="info">
                        <div class="imageforgrid">
                            <img 
                            class="profilelogo" 
                            src="<%= post.user.profilepicture 
                                ? '/images/uploads/' + post.user.profilepicture 
                                : '/gfx/logo.png' %>" 
                            alt="User Profile Picture">    
                        </div>
                        <% if (post.posttext !== ``) { %>
                            <p><%= post.posttext %></p>
                        <% } %>
                    </div>
                </div>
            <% }) %>    
        </div>   
        
        
    </div>
</body>

</html>